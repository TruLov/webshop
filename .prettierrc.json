{
  "printWidth": 120,
  "endOfLine": "lf",
  "tabWidth": 4,
  "trailingComma": "es5",
  "semi": true,
  "arrowParens": "always",
  "singleQuote": true,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": ["*.json", "*.yaml", "*.md"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
