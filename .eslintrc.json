{
  "root": false,
  "extends": ["eslint:recommended", "plugin:@sap/cds/recommended", "prettier"],
  "env": {
    "es2022": true,
    "node": true,
    "jest": true,
    "mocha": true
  },
  "globals": {
    "SELECT": true,
    "INSERT": true,
    "UPSERT": true,
    "UPDATE": true,
    "DELETE": true,
    "CREATE": true,
    "DROP": true,
    "CDL": true,
    "CQL": true,
    "CXL": true,
    "cds": true
  },
  "rules": {
    "no-console": 1,
    "require-atomic-updates": 1,
    "no-unused-vars": 1
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": [
    "gen/",
    "dist/",
    "test/",
    "*.test.js",
    "*.spec.js",
    "*.test.ts",
    "*.spec.ts"
  ]
}
